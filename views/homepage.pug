extends layout

block content
  // HEADER SECTIION //
  div(class="container-fluid dark-bkgd-5")
    section(class="section-padding" id="landing")
      div(class="container")
        div(class="row")
          // Picture on the left.
          div(class="col-xs-12 hidden-sm col-md-5 my-auto")
            figure(class="mobile-image text-right" data-wow-delay="0.2s")
              img(src="/images/me.jpeg" class="img-fluid" alt="")
              //- img(src="/images/me2.jpeg" class="img-fluid", alt="")
          // Name banner on the right. ff4133
          div(class="col-xs-12 col-md-7 my-auto")
            div(class="space-80 hidden-xs")
            h1(class="" data-wow-delay="0.4s" style="color:#1745ff") Milo Knowles
            div(class="space-20")
            div(style="color:000000" class="desc" data-wow-delay="0.6s")
              h2 I'm currently a masters student at MIT studying computer science.
            div(class="space-20")
            div(style="color:616161" class="desc" data-wow-delay="0.6s")
              h2 My interests include autonomous robotics, computer vision, music, indoor farming, sustainability, and software projects of all kinds.

  // PROJECTS SECTION //
  div(class="container-fluid light-bkgd")
    section(class="section-padding" id="projects")
      div(class="container")
        div(class="row")
          // Title on the left.
          div(class="col-xs-12 col-md-12 my-auto")
            div(class="space-80 hidden-xs")
            h1(style="color:#1745ff" data-wow-delay="0.4s") Projects
            div(class="space-20")
            //- div(class="desc p" data-wow-delay="0.6s")
            //-   h3 Some things I've worked on

            // Add a list group of projects.
            include project_list_group.pug

          // Carousel of sample projects.
          //- div(class="col-xs-12 hidden-sm col-md-7 my-auto")
            //- include project_carousel.pug

  // CONTACT SECTION //
  div(class="container-fluid dark-bkgd-5")
    section(class="section-padding" id="contact")
      div(class="container")
        div(class="card mx-auto" style="width: 30rem;")
          div(class="card-body form")
            div(class="row mx-auto")
              h3 Contact Me
            div(class="row mx-auto")
              h5 <i class="lnr lnr-envelope"></i> mknowles@mit.edu
            div(class="row mx-auto")
              h5 <i class="lnr lnr-code"></i><a href="https://github.com/miloknowles" class="card-link"> https://github.com/miloknowles</a>
            div(class="row mx-auto")
              h5 <i class="lnr lnr-map-marker"></i> Cambridge, MA || San Jose, CA
