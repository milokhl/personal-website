extends layout

block content
  // HEADER SECTIION //
  div(class="container-fluid dark-bkgd")
    section(class="section-padding" id="landing")
      div(class="container")
        div(class="row")
          // Picture on the left.
          div(class="col-xs-12 hidden-sm col-md-5 my-auto")
            figure(class="mobile-image wow fadeInUp text-right" data-wow-delay="0.2s")
              img(src="/images/me.jpeg" class="img-fluid" alt="")
          // Name banner on the right.
          div(class="col-xs-12 col-md-7 my-auto")
            div(class="space-80 hidden-xs")
            h1(class="wow fadeInUp" data-wow-delay="0.4s") Milo Knowles
            div(class="space-20")
            div(class="desc wow fadeInUp" data-wow-delay="0.6s")
              h3 I study Computer Science at MIT.
            div(class="space-20")
            div(class="desc wow fadeInUp" data-wow-delay="0.6s")
              h3 I'm interested in autonomous robotics, drones, and software projects of all kinds.

  // PROJECTS SECTION //
  div(class="container-fluid light-bkgd")
    section(class="section-padding" id="projects")
      div(class="container")
        div(class="row")
          // Title on the left.
          div(class="col-xs-12 col-md-5 my-auto")
            div(class="space-80 hidden-xs")
            h1(class="wow fadeInLeft" data-wow-delay="0.4s") Projects
            div(class="space-20")
            div(class="desc wow fadeInUp" data-wow-delay="0.6s")
              h3 Some of the things I've built

          // Carousel of sample projects.
          div(class="col-xs-12 hidden-sm col-md-7 my-auto")
            <div id="project-carousel" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#project-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#project-carousel" data-slide-to="1"></li>
                <li data-target="#project-carousel" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="/images/robot-full-assembly.jpg" alt="MASLAB 2017">
                    <div class="carousel-caption d-none d-md-block">
                      <h5>MASLAB 2017</h5>
                      <p>An autonomous block-stacking robot</p>
                    </div>
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/images/original-led-app.jpg" alt="iPhone controlled LED lighting">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/images/slam2_good.png" alt="Kinect SLAM">
                </div>
              </div>
              <a class="carousel-control-prev" href="#project-carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#project-carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>

  // CONTACT SECTION //
  div(class="container-fluid dark-bkgd")
    section(class="section-padding" id="contact")
      div(class="container")
        div(class="card mx-auto wow fadeInUp" style="width: 30rem;")
          div(class="card-body form")
            div(class="row mx-auto")
              h3 Contact Me
            div(class="row mx-auto")
              h5 <i class="lnr lnr-envelope"></i> mknowles@mit.edu
            div(class="row mx-auto")
              h5 <i class="lnr lnr-code"></i><a href="https://github.com/milokhl" class="card-link"> https://github.com/milokhl</a>
            div(class="row mx-auto")
              h5 <i class="lnr lnr-map-marker"></i> Cambridge, MA || San Jose, CA
